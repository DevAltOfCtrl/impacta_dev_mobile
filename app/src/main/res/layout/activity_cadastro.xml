<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CadastroActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:layout_marginBottom="74dp"
        android:text="Faça seu cadastro"
        android:textColor="@color/black"
        android:textSize="30dp"
        app:layout_constraintBottom_toTopOf="@+id/containerCadastro"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include" />

    <View
        android:id="@+id/containerCadastro"
        style="@style/ContainerComponents"
        android:layout_width="355dp"
        android:layout_height="313dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="74dp"
        android:layout_marginEnd="26dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:id="@+id/nome_cadastro"
        style="@style/EditText"
        android:layout_marginTop="32dp"
        android:hint="Nome"
        android:inputType="textImeMultiLine"
        android:maxLength="20"
        app:layout_constraintEnd_toEndOf="@+id/containerCadastro"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="@+id/containerCadastro"
        app:layout_constraintTop_toTopOf="@+id/containerCadastro" />

    <EditText
        android:id="@+id/usuario_cadastro"
        style="@style/EditText"
        android:layout_marginBottom="164dp"
        android:drawableRight="@drawable/ic_userlogin"
        android:hint="Usuário"
        android:inputType="textImeMultiLine"
        android:maxLength="20"
        app:layout_constraintBottom_toTopOf="@+id/cadastro_button"
        tools:layout_editor_absoluteX="50dp" />

    <EditText
        android:id="@+id/senha_cadastro"
        style="@style/EditText"
        android:layout_marginBottom="64dp"
        android:drawableRight="@drawable/ic_password"
        android:hint="Senha"
        android:inputType="textPassword"
        app:layout_constraintBottom_toTopOf="@+id/cadastro_button"
        app:layout_constraintEnd_toEndOf="@+id/containerCadastro"
        app:layout_constraintHorizontal_bias="0.465"
        app:layout_constraintStart_toStartOf="@+id/containerCadastro" />

    <Button
        android:id="@+id/cadastro_button"
        android:layout_width="327dp"
        android:layout_height="76dp"
        android:layout_marginStart="46dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="47dp"
        android:layout_marginBottom="13dp"
        android:padding="20dp"
        android:text="CADASTRAR"
        app:cornerRadius="20dp"
        app:layout_constraintBottom_toTopOf="@+id/sigin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/containerCadastro"
        tools:ignore="UnknownIdInLayout" />

</androidx.constraintlayout.widget.ConstraintLayout>